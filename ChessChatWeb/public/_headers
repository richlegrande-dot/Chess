# Cloudflare Pages Security Headers
# Applied to all routes

/*
  # Security Headers
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-origin
  
  # HSTS - Enforce HTTPS for 1 year
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Content Security Policy - Relaxed for Wall-E's chess app
  Content-Security-Policy: default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; connect-src 'self' https://api.openai.com; img-src 'self' data:; font-src 'self' https://fonts.gstatic.com; media-src 'self'; object-src 'none'; base-uri 'self'; form-action 'self'; frame-ancestors 'none'; upgrade-insecure-requests

# HTML - No caching for dynamic content
/*.html
  Cache-Control: no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

# Root index
/index.html
  Cache-Control: no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

/
  Cache-Control: no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

# JavaScript and CSS - Cache with revalidation (hashed filenames)
/assets/*.js
  Cache-Control: public, max-age=31536000, immutable

/assets/*.css
  Cache-Control: public, max-age=31536000, immutable

# Sound files - Aggressive caching (1 year)
/sounds/*.mp3
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: audio/mpeg

/sounds/*.wav
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: audio/wav

/sounds/*.ogg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: audio/ogg

# Images and fonts - Long-term caching
/assets/*.png
  Cache-Control: public, max-age=31536000, immutable

/assets/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/assets/*.svg
  Cache-Control: public, max-age=31536000, immutable

/assets/*.woff
  Cache-Control: public, max-age=31536000, immutable

/assets/*.woff2
  Cache-Control: public, max-age=31536000, immutable

# API endpoints - No caching
/api/*
  Cache-Control: private, no-cache, no-store, must-revalidate
  X-Content-Type-Options: nosniff
