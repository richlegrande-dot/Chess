{
  "name": "chesschat-web",
  "version": "1.0.0",
  "description": "ChessChat Web - Play chess against AI with post-game analysis",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:mock": "tsx mock-backend.ts",
    "dev:pages": "wrangler pages dev . --port 3000",
    "build": "vite build",
    "build:check": "tsc && vite build",
    "preview": "vite preview",
    "deploy": "npm run build && wrangler pages deploy dist",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:unit && npm run test:e2e",
    "db:generate": "cross-env PRISMA_CLIENT_ENGINE_TYPE=dataproxy prisma generate",
    "db:push": "prisma db push",
    "db:backup": "tsx scripts/backup-knowledge.ts",
    "db:restore": "tsx scripts/restore-knowledge.ts",
    "db:verify": "tsx scripts/verify-protection.ts",
    "import:knowledge": "tsx scripts/import-knowledge.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@prisma/extension-accelerate": "^1.2.1",
    "chess.js": "^1.4.0",
    "gsap": "^3.14.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^4.0.15",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsdom": "^27.3.0",
    "prisma": "^5.22.0",
    "terser": "^5.44.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^4.0.15",
    "wrangler": "^3.22.1"
  }
}
